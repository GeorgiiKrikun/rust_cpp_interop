cpp_build_dir := env("CPP_BUILD_DIR", justfile_directory() / "cpp/build/")

default:
  just --list

build:
  cargo build

run:
  #!/bin/bash
  export LD_LIBRARY_PATH=$LD_LIBRARY_PATH:{{cpp_build_dir}}
  echo $LD_LIBRARY_PATH
  cargo run -- --input /home/georgii/Pictures/inference_tinkering.jpg --output /home/georgii/Pictures/rust-saved-pic.png
